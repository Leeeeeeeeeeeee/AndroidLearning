<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidLearning" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- 状态栏颜色-->
<!--        <item name="colorPrimaryDark">@color/red_dark</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_dark</item>
        <!-- 标题栏背景颜色 -->
        <item name="colorPrimary">@color/red</item>
        <!-- 控件颜色 失效！-->
        <item name="colorAccent">@color/green</item>
        <item name="actionOverflowMenuStyle">@style/toolbarMenuStyle</item>
    </style>

    <style name="toolbarMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/material_deep_teal_500</item>
        <!-- 弹出层垂直方向上的偏移，负值会覆盖toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">-2dp</item>
        <!--文字颜色-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.AndroidLearning.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidLearning.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidLearning.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>