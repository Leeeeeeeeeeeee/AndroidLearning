<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_textview"
            style="@style/MyButton"
            android:layout_width="0dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_imageview"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_imageview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ImageView"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_textview"
            app:layout_constraintRight_toLeftOf="@id/btn_edittext"
            app:layout_constraintTop_toTopOf="@id/btn_textview" />

        <Button
            android:id="@+id/btn_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EditText"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_imageview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_textview" />

        <Button
            android:id="@+id/btn_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Button"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_radiobutton"
            app:layout_constraintTop_toBottomOf="@id/btn_edittext" />

        <Button
            android:id="@+id/btn_radiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_button"
            app:layout_constraintRight_toLeftOf="@id/btn_checkbox"
            app:layout_constraintTop_toTopOf="@id/btn_button" />

        <Button
            android:id="@+id/btn_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_radiobutton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_button" />


        <Button
            android:id="@+id/btn_listview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ListView"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_expandable_listview"
            app:layout_constraintTop_toBottomOf="@id/btn_button" />

        <Button
            android:id="@+id/btn_expandable_listview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ExpandableListView"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_listview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_listview" />

        <Button
            android:id="@+id/btn_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dialog"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_custom_dialog"
            app:layout_constraintTop_toBottomOf="@id/btn_listview" />

        <Button
            android:id="@+id/btn_custom_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CustomDialog"
            android:textAllCaps="false"
            app:layout_constraintLeft_toRightOf="@id/btn_dialog"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/btn_dialog" />

        <Button
            android:id="@+id/btn_popup_window"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PopupWindow"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_dialog" />

        <Button
            android:id="@+id/btn_toast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Toast"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_popup_window" />

        <Button
            android:id="@+id/btn_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Progress"
            android:textAllCaps="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_toast" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>